<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>

<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SettingsController">
   <root>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="600.0" snapToPixel="false" spacing="10.0">
         <children>
            <Label alignment="CENTER" prefWidth="600.0" text="Settings" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="64.0" />
               </font>
            </Label>
            <Label prefWidth="600.0" text="Board Size" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="28.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="50.0">
               <children>
                  <RadioButton mnemonicParsing="false" onAction="#radio8" selected="true" text="8 x 8">
                     <toggleGroup>
                        <ToggleGroup fx:id="boardSize" />
                     </toggleGroup></RadioButton>
                  <RadioButton layoutX="241.0" layoutY="52.0" mnemonicParsing="false" onAction="#radio16" text="16 x 16" toggleGroup="$boardSize" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <RadioButton fx:id="customSizeRadioButton" mnemonicParsing="false" onAction="#radioCustom" text="Custom Size" toggleGroup="$boardSize" />
                        <TextField fx:id="customSizeText" onAction="#boardSizeTextChanged" promptText="Enter integer:" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <Label prefWidth="600.0" text="Game Type">
               <font>
                  <Font size="28.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <HBox alignment="BOTTOM_LEFT" prefWidth="200.0" spacing="45.0">
               <children>
                  <RadioButton mnemonicParsing="false" onAction="#setReversi" selected="true" text="Reversi" toggleGroup="$GameType" />
                  <RadioButton mnemonicParsing="false" onAction="#setOthello" text="Othello" toggleGroup="$GameType" />
                  <RadioButton mnemonicParsing="false" onAction="#setRolit" text="Rolit" toggleGroup="$GameType" />
               </children>
            </HBox>
            <Label prefWidth="600.0" text="Players" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefWidth="400.0" spacing="45.0">
               <children>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Button onAction="#prevPlayer" text="Previous" />
                              <Label fx:id="playerNumber" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <Button onAction="#nextPlayer" text="Next" />
                           </children>
                        </HBox>
                        <TextField fx:id="playerNameText" onAction="#playerNameChanged" promptText="Player name" />
                        <HBox spacing="20.0">
                           <children>
                              <Button onAction="#prevColor" text="Previous" />
                              <Circle fx:id="playerColor"/>
                              <Button onAction="#nextColor" text="Next" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label prefWidth="600.0" text="Player Type" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <HBox alignment="BOTTOM_LEFT" prefWidth="200.0" spacing="45.0">
               <children>
                  <RadioButton fx:id="humanRadio" mnemonicParsing="false" onAction="#radioHuman" selected="true" text="Human">
                     <toggleGroup>
                        <ToggleGroup fx:id="AIType" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="randomRadio" mnemonicParsing="false" onAction="#radioRandom" text="RandomAI" toggleGroup="$AIType" />
                  <RadioButton fx:id="greedyRadio" mnemonicParsing="false" onAction="#radioGreedy" text="GreedyAI" toggleGroup="$AIType" />
                  <RadioButton fx:id="weightedRadio" mnemonicParsing="false" onAction="#radioWeighted" text="WeightedAI" toggleGroup="$AIType" />
               </children>
            </HBox>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#back" prefWidth="100.0" text="Back" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </root>
</Scene>
